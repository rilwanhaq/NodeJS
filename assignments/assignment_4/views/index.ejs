<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <table class="table table-striped table-condensed">
        <tr class="table-primary">
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
            <th scope="col">Delete</th>
        </tr>
            <% users.forEach( user => { %>
            <tr class="table-secondary">
            <% if(user.isPromoted == true){ %>
                <td class="text-success" ><%= user.name %></td>
                <td class="text-success" ><%= user.email %></td>
            <%} else if(user.isPromoted == false){ %>
                    <td class="text-danger" ><%= user.name %></td>
                    <td class="text-danger" ><%= user.email %></td>
            <%} else { %>
                <td class="text-warning" ><%= user.name %></td>
                <td class="text-warning" ><%= user.email %></td>
            <%} %>
                <td >
                    <form method="POST" action="/users/<%= user._id %>/edit?_method=PUT">
                        <button class="btn btn-success" id="edit-<%= user.name %>" type="submit">Promote/Demote</button>
                    </form>
                </td>
                <td>
                    <form method="POST" action="/users/<%= user._id %>/delete?_method=DELETE">
                        <button class="btn btn-danger" id="delete-<%= user.name %>">Delete</button>
                    </form>
                </td>
            </tr>
            <% })%>
    </table>
    <a href="/form" class="btn btn-primary" id="btn">Add User</a>
</body>
</html>